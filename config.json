{
  "name": "Add a new B2B Site",
  "type": "Split",
  "formName": "siteForm",
  "componentName": "SiteDetails",
  "moduleName": "sites",
  "forms" : [{
    "title": "Site Left",
    "properties": [
      {
        "name": "Operator",
        "id": "operatorId",
        "type": "autocomplete",
        "collectionName": "operators",
        "collectionType": "IOperator",
        "required": true
      },
      {
        "name": "Site Name",
        "id": "siteId",
        "type": "input",
        "required": true
      },
      {
        "name": "Site URL",
        "id": "siteUrl",
        "type": "input",
        "required": true
      },
      {
        "name": "License",
        "id": "licenseId",
        "type": "input",
        "required": false
      },
      {
        "name": "Default Country",
        "id": "defaultCountry",
        "collectionName": "countries",
        "collectionType": "ICountry",
        "type": "autocomplete",
        "multi": false,
        "required": true
      },
      {
        "name": "Default Language",
        "id": "languageId",
        "collectionName": "languages",
        "collectionType": "ILanguage",
        "type": "autocomplete",
        "multi": false,
        "required": true
      },
      {
        "name": "Other Languages",
        "id": "languages",
        "collectionName": "languages",
        "collectionType": "ILanguage",
        "type": "autocomplete",
        "multi": true,
        "required": true
      },
      {
        "name": "Base Currency",
        "id": "currencyId",
        "collectionName": "currencies",
        "collectionType": "ICurrency",
        "type": "autocomplete",
        "multi": false,
        "required": true
      },
      {
        "name": "Other Currencies",
        "id": "currencies",
        "collectionName": "currencies",
        "collectionType": "ICurrency",
        "type": "autocomplete",
        "multi": true,
        "required": true
      }
    ]
  },
  {
    "title": "Site Right",
    "properties": [
      {
        "name": "Cash",
        "id": "isCash",
        "type": "checkbox",
        "required": false
      },
      {
        "name": "Jurisdiction",
        "id": "jurisdictionId",
        "type": "autocomplete",
        "collectionName": "jurisdictions",
        "collectionType": "IJurisdiction",
        "required": true
      },
      {
        "name": "Market",
        "id": "markets",
        "type": "autocomplete",
        "collectionName": "countries",
        "collectionType": "ICountry",
        "multi": true,
        "required": true
      },
      {
        "name": "Production Data Center",
        "id": "dataCenterId",
        "collectionName": "countries",
        "collectionType": "ICountry",
        "type": "autocomplete",
        "multi": false,
        "required": true
      },
      {
        "name": "Game Server Location",
        "id": "serverId",
        "collectionName": "countries",
        "collectionType": "ICountry",
        "type": "autocomplete",
        "multi": false,
        "required": true
      },
      {
        "name": "Expected Concurrent Users",
        "id": "concurrentUsersId",
        "type": "dropdown",
        "options": "up to 5000|5000 until 10000|10000 until 50000|more than 50000",
        "required": false
      },
      {
        "name": "Notes",
        "id": "note",
        "type": "textarea"
      }
    ]
  }]
}
